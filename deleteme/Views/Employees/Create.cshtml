@model deleteme.Models.Entities.Employee

@{
    ViewData["Title"] = "Crear Empleado";
}

<h1>Crear Nuevo Empleado</h1>

<h4>Empleado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @* Formulario para crear empleado *@
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            @* Campo para el nombre *@
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nombre</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            @* Campo para el apellido *@
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Apellido</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            
            @* Campo para el DNI *@
            <div class="form-group">
                <label asp-for="Dni" class="control-label">DNI</label>
                <input asp-for="Dni" class="form-control" />
                <span asp-validation-for="Dni" class="text-danger"></span>
            </div>
            
            @* Campo para el sexo - usando un dropdown para opciones limitadas *@
            <div class="form-group">
                <label asp-for="Sex" class="control-label">Sexo</label>
                <select asp-for="Sex" class="form-control">
                    <option value="">-- Seleccione --</option>
                    <option value="M">Masculino</option>
                    <option value="F">Femenino</option>
                </select>
                <span asp-validation-for="Sex" class="text-danger"></span>
            </div>
            
            @* Campo para el email *@
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" type="email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            
            @* Campo para el teléfono *@
            <div class="form-group">
                <label asp-for="Phone" class="control-label">Teléfono</label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            
            @* Campo para el salario *@
            <div class="form-group">
                <label asp-for="Salary" class="control-label">Salario</label>
                <input asp-for="Salary" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            
            @* Botones de acción *@
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}