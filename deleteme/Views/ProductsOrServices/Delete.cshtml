@model deleteme.Models.Entities.ProductOrService

@{
    ViewData["Title"] = "Eliminar Producto/Servicio";
}

<h1>Eliminar Producto/Servicio</h1>

@* Mensaje de advertencia *@
<div class="alert alert-danger">
    <h3>¿Está seguro que desea eliminar este producto o servicio?</h3>
    <p>Esta acción no se puede deshacer.</p>
</div>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductOrServiceId)
        </dd>
        
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        
        <dt class="col-sm-2">
            Descripción
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        
        <dt class="col-sm-2">
            Tipo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ServiceType)
        </dd>
        
        <dt class="col-sm-2">
            Precio
        </dt>
        <dd class="col-sm-10">
            $@Model.Price.ToString("N2")
        </dd>
        
        <dt class="col-sm-2">
            Stock
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stock)
        </dd>
    </dl>
    
    @* Formulario de confirmación *@
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProductOrServiceId" />
        <input type="submit" value="Sí, eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">No, volver al listado</a>
    </form>
</div>